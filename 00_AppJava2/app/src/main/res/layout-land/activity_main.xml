<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esto se ve en landscape"
        android:textSize="28dp"
        android:textColor="#0000FF"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:minHeight="48dp"
        android:textSize="24sp"
        android:id="@+id/editText1"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa para mostrar por consola"
        android:id="@+id/boton1"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa para mostrar por consola"
        android:id="@+id/boton2"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa para mostrar por consola boton 3"
        android:id="@+id/boton3"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa para mostrar por consola boton 4"
        android:id="@+id/boton4"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa para mostrar por consola boton 5"
        android:id="@+id/boton5"
        android:layout_gravity="center"
        />

</LinearLayout>